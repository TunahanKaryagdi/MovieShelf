<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstProject" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>




    </style>

    <style name="Theme.FirstProject" parent="Base.Theme.FirstProject" />

    <style name="TextSmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDefault" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeTabStyle">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailTabStyle">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/grey</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IconStyle">
        <item name="android:tint">#FFFFFF</item>
    </style>

</resources>